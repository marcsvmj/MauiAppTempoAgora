<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgora.MainPage"
             Title="Previsão do Tempo">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Digite sua Cidade:"/>
            <Entry x:Name="txt_cidade" />
            <Label Text="Digite a Sigla de sua Língua:"/>
            <Entry x:Name="txt_lingua" />
            <Button Text="Buscar" Clicked="Button_Clicked" />

            <Label x:Name="lbl_res" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>